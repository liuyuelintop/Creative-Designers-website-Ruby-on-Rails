<body>
<h2 style="text-align:center;font-size: 3em;font-family:Lucida Caligraphy;color:white;">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="imgcontainer"> 
    <%=image_tag("apple-touch-icon.png" ,:alt => "Avatar",:class => "avatar")%>
    <!-- <img src="img_avatar2.png" alt="Avatar" class="avatar"> -->
  </div>
<div class="container">
  <div class="input">
    <%= f.text_field :name, :placeholder=> 'Full Name', :class=> 'input' %>
  </div>

  <div class="input">
    <%= f.email_field :email, :placeholder=> 'Email', :class=> 'input' %>
  </div>

  <div class="input">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, :placeholder=> 'Password ', :class=> 'input' %>
  </div>

  <div class="input">
    <%= f.password_field :password_confirmation, :placeholder=> 'Confirm Password', :class=> 'input' %>
  </div>
  <div class="input">
    <%= f.country_select :country, :placeholder=> 'Country', :class=> 'input' %>
  </div>

  <div class="input">
    <%= f.text_field :address, :placeholder=> 'Address', :class=> 'input' %>
  </div>
  <div class="input">
    <%= f.text_field :city, :placeholder=> 'City', :class=> 'input' %>
  </div>
  <div class="input">
    <%= f.text_field :postal_code, :placeholder=> 'Postal Code', :class=> 'input' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class=> 'submit' %>
  </div>
</div>
<% end %>
<div class="container2" style="background-color:rgba(44, 37, 21, 0.5); position:absolute">
    <div style="width:50%; position:relative; float:left">
        <%=link_to '<button type="button" class="cancelbtn">Cancel</button>'.html_safe,root_path%></div>
    <div <div style="width:50%; position:relative; float:right"><span class="psw"><%= render "devise/shared/links" %></span></div>
  </div>
  
