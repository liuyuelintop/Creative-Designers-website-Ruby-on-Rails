<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Title</th>
      <th>Img url</th>
      <th>Down url</th>
      <th>Description</th>
      <th>Price</th>
      <th>Uploaded by</th>
      <th>Tutorial url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.type %></td>
        <td><%= product.title %></td>
        <td><%= product.img_url %></td>
        <td><%= product.down_url %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.uploaded_by %></td>
        <td><%= product.tutorial_url %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

